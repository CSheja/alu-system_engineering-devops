#!/usr/bin/env bash
# Configure Nginx to redirect /redirect_me to a YouTube link using HTTP 301

set -e

# Update package index and install nginx if not installed
apt-get update -y
apt-get install -y nginx

# Ensure Nginx default site directory exists
DEFAULT_CONF="/etc/nginx/sites-available/default"

# Overwrite the default config with a guaranteed working server block
cat > $DEFAULT_CONF << 'EOF'
server {
    listen 80 default_server;
    listen [::]:80 default_server;

    root /var/www/html;
    index index.html index.htm index.nginx-debian.html;

    server_name _;

    location / {
        try_files $uri $uri/ =404;
    }

    location /redirect_me {
        return 301 https://www.youtube.com/watch?v=QH2-TGUlwu4;
    }
}
EOF
# Test nginx config syntax
nginx -t

# Restart nginx to apply changes
systemctl restart nginx
